<%- include("partials/header") %>

<section class="content--body register">
  <section class="registrationCard">
    <h2 class="registrationCard--title">Login with Demo Account</h2>

    <section class="registrationCard--alert">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach( el => {
      %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %>
    </section>

    <form action="/login" method="POST" class="registrationCard--form">
      <label for="email">Email address</label>
      <input type="email" name="email" placeholder="Enter email" class="registration--inpt" value="demo@demo.com"/>
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        placeholder="Enter password"
        class="registration--inpt"
        value="demodemo1"
      />
      <input type="submit" value="Sign In" class="registration--btn" />
    </form>

    <section class="registrationCard--navigate">
      <p>Ready to make an account? <a href="/signup">Sign up</a></p>
    </section>
  </section>
</section>
